@model StoreForTickets.ViewModels.RegisterCardVM

@{
    ViewBag.Title = "Card";
}

<h2>Card</h2>
<fieldset>
    <legend>Register</legend>
    <form action="/Users/Card" method="post">
        @Html.HiddenFor(m => m.Id)
        <div style="clear:both">
            <div style="width:100px; display:inline-block">

                @Html.LabelFor(m => m.CardNumber)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.CardNumber)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.CardNumber)
            </div>
        </div>

        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.Name)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.Name)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.ExpiryDate)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.ExpiryDate)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.ExpiryDate)
            </div>
        </div>
        <div style="clear:both">
            <div style="width:100px; display:inline-block">
                @Html.LabelFor(m => m.SecurityCode)
            </div>
            <div style="width:100px; display:inline">
                @Html.TextBoxFor(m => m.SecurityCode)
            </div>
            <div style="display:inline">
                @Html.ValidationMessageFor(m => m.SecurityCode)
            </div>
        </div>
        <div style="clear:both">
            <input type="submit" value="RegisterCard" />
            <a href="/Users/Index">Cancel</a>
        </div>
    </form>
</fieldset>



